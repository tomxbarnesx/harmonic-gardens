<div class="close-container"><a class="close-x">&times;</a></div>
<%= form_for @user, remote: true do |form| %>
    <h2>Edit</h2>
    <div class="form-group">
        <label>First Name: </label>
        <%= form.text_field :first_name, placeholder: "First Name", class: 'form-control form-control-sm' %>
    </div>
    <div class="form-group">
        <label>Last Name: </label>
        <%= form.text_field :last_name, placeholder: "First Name", class: 'form-control form-control-sm' %>
    </div>
    <div class="form-group">
        <label>Email: </label>
        <%= form.text_field :email, placeholder: "Email", class: "form-control form-control-sm" %>
    </div>
    <div class="form-group">
        <label>Username: </label>
        <%= form.text_field :username, placeholder: "Username", class: "form-control form-control-sm" %>
    </div>
    <div class="form-group">
        <label>Access level: </label>
        <%= form.select(:user_access, ['Worker', 'Foreman', 'Admin'], {}, {class: "form-control form-control-sm"}) %>
    </div>
    <div class="form-group">
        <label>Hourly Rate: </label>
        <%= form.number_field :hourly_rate, placeholder: "Hourly Rate", class: "form-control form-control-sm" %>
    </div>
    <%= form.submit "Submit", :id=>'hours-submit', class: "btn btn-dark" %>
<% end %>

<script>
$(document).on("click", ".close-x", function(){
    $(".id-card").html('<%= j (render "user_card") %>' );
    $("#user-shift-table").show();
    $('.budget-block').show();
});
</script>
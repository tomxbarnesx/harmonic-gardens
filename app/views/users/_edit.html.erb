<%= form_for @user, remote: true do |form| %>
    <div class="form-group">
        <label>First Name: </label>
        <%= form.text_field :first_name, placeholder: "First Name", class: 'form-control' %>
    </div>
    <div class="form-group">
        <label>Last Name: </label>
        <%= form.text_field :last_name, placeholder: "First Name", class: 'form-control' %>
    </div>
    <div class="form-group">
        <label>Email: </label>
        <%= form.text_field :email, placeholder: "Email", class: "form-control" %>
    </div>
    <div class="form-group">
        <label>Username: </label>
        <%= form.text_field :username, placeholder: "Username", class: "form-control" %>
    </div>
    <div class="form-group">
        <label>Access level: </label>
        <%= form.select(:user_access, ['Worker', 'Foreman', 'Admin'], {}, {class: "form-control"}) %>
    </div>
    <div class="form-group">
        <label>Hourly Rate: </label>
        <%= form.number_field :hourly_rate, placeholder: "Hourly Rate", class: "form-control" %>
    </div>
    <%= form.submit "Submit", :id=>'hours-submit', class: "btn btn-dark" %>
<% end %>
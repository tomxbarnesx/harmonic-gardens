<% @clients.each do |c| %>
    <tr id="client-<%= c.id %>">
        <td><%= c.first_name %></td>
        <td><%= c.last_name %></td>
        <td><%= c.email %></td>
        <td><%= c.address %></td>
        <td><%= link_to 'View', client_path(c) %></td>
        <td><%= link_to 'Edit', edit_client_path(c) %></td>
        <td><%= link_to 'Delete', client_path(c),
              method: :delete, remote:true,
              data: { confirm: 'Are you sure? This cannot be reversed.' } %></td>
    </tr>
<% end %>
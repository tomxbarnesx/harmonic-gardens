<div class="col-md-4">
    <% if @client.house_pic.attached? %>
    <%= image_tag @client.house_pic, options = {width: "100%"} %>
    <% else %>
    <%= image_tag "home_placeholder.png"%>
    <% end %>
</div>
<div class="col-md-4">
    <h2><%= @client.full_name %></h2>
    <p><strong>Email:</strong> <%= @client.email %></p>
    <p><strong>Address:</strong> <%= @client.address %></p>
    <p><strong>Home Phone:</strong> <%= number_to_phone(@client.home_phone, area_code: true) %></p>
    <p><strong>Cell Phone:</strong> <%= number_to_phone(@client.cell_phone, area_code: true) %></p>
    <%= link_to 'Edit', edit_client_path(@client), remote:true, class: "btn btn-success" %>
    <%= link_to 'Delete', client_path(@client),
                method: :delete, remote: true,
                data: { confirm: 'Are you sure? This cannot be reversed.' }, class: 'btn btn-danger' %>
</div>
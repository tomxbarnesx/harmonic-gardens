<div>
    <div class="close-container"><a class="close-x">&times;</a></div>
    <h2>Edit</h2>
    <%= form_for @client, remote: true do |form| %>

        <%= form_group_for form, :first_name, label: false do %>
            <label>First Name: </label>
            <%= form.text_field :first_name, placeholder: "First Name", class: 'form-control form-control-sm' %>
        <% end %>

        <%= form_group_for form, :last_name, label: false do %>
            <label>Last Name: </label>
            <%= form.text_field :last_name, placeholder: "First Name", class: 'form-control form-control-sm' %>
        <% end %>

        <%= form_group_for form, :address, label: false do %>
            <label>Address: </label>
            <%= form.text_field :address, placeholder: "Address", class: "form-control form-control-sm" %>
        <% end %>
        
        <div class="form-group">
            <label>Email: </label>
            <%= form.text_field :email, placeholder: "Email", class: "form-control form-control-sm" %>
        </div>
        <div class="form-group">
            <label>Home Phone: </label>
            <%= form.number_field :home_phone, placeholder: "Home Phone", class: "form-control form-control-sm" %>
        </div>
        <div class="form-group">
            <label>Cell Phone: </label>
            <%= form.number_field :cell_phone, placeholder: "Cell Phone", class: "form-control form-control-sm" %>
        </div>
        <div class="form-group">
            <label>House Photo:</label>
            <%= form.file_field :house_pic, class: "form-control form-control-sm" %>
        </div>
        <%= form.submit "Submit", :id=>'hours-submit', class: "btn btn-sm btn-dark" %>
    <% end %>
</div>

<script>
$(document).on("click", ".close-x", function(){
    $(".id-card").html("<%= j (render 'client_card') %>");
    $('.invoice-block').show();
});
</script>
<div class="invoice-header container">
    <div class="row justify-content-between">
        <div class="invoice-client-info col-9">
            <h3><%= @invoice.client.full_name %></h3>
            <%= @invoice.client.address%><br>
            <%= number_to_phone(@invoice.client.home_phone, area_code: true) %><br>
            <%= @invoice.client.email %>
        </div>
        <div class="col-3">
            <p><strong>Invoice Number: </strong><%= @invoice.id %></p>
            <p><strong>Date: </strong><%= @invoice.just_date %></p>
        </div>
    </div>
</div>
<div class="invoice-body">
    <div class="description-header">
        <h4>Description</h4>
    </div>
    <div class="invoice-date-master">
        <%= render partial: 'invoice_dates/invoice_date', collection: @invoice.invoice_dates, as: :idate  %>
        <%= link_to 'Add Date', new_invoice_invoice_date_path(@invoice), remote:true, class: "btn btn-success" %>
    </div>
</div>
<div id="new-user-client-card">
    <h2>New Invoice</h2>
    <%= form_for @invoice, local: true do |form| %>
        <div class="form-group">
            <label>Client: </label>
            <%= collection_select(:invoice, :client_id, Client.all, :id, :full_name, {}, {:class=>'form-control form-control-lg'}) %>
        </div>
        <div class="form-group">
            <label>Description: (optional)</label>
            <%= form.text_area :master_desc, placeholder: "Enter a short description", class: "form-control" %>
        <%= form.submit "Submit", :id=>'invoice-submit', class: "btn btn-dark" %>
    <% end %>
</div>
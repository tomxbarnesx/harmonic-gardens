<div class="col-md-8 col-11 mx-auto bg-white border rounded border-secondary pl-5 pr-5 pt-4 pb-3 mt-md-4 mt-5">
    <h2>New Invoice</h2>
    <%= form_for @invoice, local: true do |form| %>
        <div class="form-group">
            <label>Client: </label>
            <%= collection_select(:invoice, :client_id, Client.order('last_name ASC'), :id, :full_name, {}, {:class=>'form-control'}) %>
        </div>
        <div class="form-group">
            <label>Description: (optional)</label>
            <%= form.text_area :master_desc, placeholder: "Enter a short description", class: "form-control" %>
        <%= form.submit "Submit", :id=>'invoice-submit', class: "btn btn-dark mt-4" %>
    <% end %>
</div>
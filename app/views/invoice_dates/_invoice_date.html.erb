<div class="invoice-date-card" id="invoice-card-<%= idate.id %>">
    <h5><%= idate.date %></h5>
    <%= idate.description %>
    <div id="invoice-shift-container-<%= idate.id %>" class="shift-container">
        <%# render partial: 'shift_dates/shift_date', collection: idate.shift_dates, as: :sdate %>
        <%# render partial: 'shift_dates/shift_date', locals: {idate: idate} %>
        <div class="invoice-shift-options">
            <%= link_to 'Attach Shift', new_invoice_date_shift_date_path(idate), remote:true, class: "btn btn-success" %>
            <%= link_to 'Add Materials', new_invoice_date_materials_date_path(idate), remote:true, class: "btn btn-success" %>
            <%= link_to 'Delete Date', invoice_date_path(idate), method: :delete, remote:true, class: "btn btn-danger" %>
        </div>
    </div>
    <%# render partial: 'material_dates/material_date', collection: idate.shift_dates, as: :sdate %>
</div>
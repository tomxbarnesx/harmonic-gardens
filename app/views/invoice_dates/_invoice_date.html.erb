<div class="invoice-date-card" id="invoice-card-<%= invoice_date.id %>">
    <h5><%= invoice_date.date %></h5>
    <%= invoice_date.description %>
    <div id="invoice-shift-container-<%= invoice_date.id %>" class="shift-container">
        <div id="invoice-shift-listings-<%= invoice_date.id %>">
            <% invoice_date.shift_dates.each do |shift_date| %>
                <p><%= shift_date.shift.user.full_name %> â€” Hours: <%= shift_date.shift.time_elapsed %> x $<%= shift_date.user.hourly_rate %>/hour </p>
            <% end %>
            <%= link_to 'Attach Shift', new_invoice_date_shift_date_path(invoice_date), remote:true, class: "btn btn-success" %>
            <%= link_to 'Add Materials', new_invoice_date_materials_date_path(invoice_date), remote:true, class: "btn btn-success" %>
            <%= link_to 'Delete Date', invoice_date_path(invoice_date), method: :delete, remote:true, class: "btn btn-danger" %>
        </div>
    </div>
    <%# render partial: 'material_dates/material_date', collection: idate.shift_dates, as: :sdate %>
</div>
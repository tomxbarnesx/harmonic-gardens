<div class="invoice-date-card" id="invoice-card-<%= invoice_date.id %>">
    <h4><%= invoice_date.date %></h4>
    <%= invoice_date.description %>
    <div id="invoice-shift-container-<%= invoice_date.id %>" class="shift-container">
        <h5>Shifts</h5>
        <div id="invoice-shift-listings-<%= invoice_date.id %>">
            <table class="table table-striped">
                <thead>
                    <th>Name</th>
                    <th>Hours</th>
                    <th>Rate</th>
                    <th>Total</th>
                    <th></th>
                </thead>
                <tbody id="tbody-<%= invoice_date.id%>">
            <% invoice_date.shift_dates.each do |shift_date| %>
                <tr id="shift-date-<%= shift_date.id %>">
                    <td><%= shift_date.shift.user.full_name %></td>
                    <td><%= shift_date.shift.time_elapsed %></td>
                    <td>$<%= shift_date.user.hourly_rate %>/hour</td>
                    <td><%= number_to_currency(shift_date.hour_calc) %></td>
                    <td><%= link_to 'Delete', shift_date_path(shift_date),
                        method: :delete, remote:true,
                        data: { confirm: 'Are you sure?' } %></td>
                </tr>
            <% end %>
                </tbody>
            </table>
            <%= link_to 'Attach Shift', new_invoice_date_shift_date_path(invoice_date), remote:true, class: "btn btn-success" %>
        </div>
    </div>
    <div id="invoice-material-container-<%= invoice_date.id %>" class="material-container">
        <h5>Materials</h5>
        <div id="invoice-material-listings-<%= invoice_date.id %>">
            <table class="table table-striped">
                <thead>
                    <th>Material</th>
                    <th>Cost Per</th>
                    <th>Quantity</th>
                    <th>Total</th>
                    <th></th>
                </thead>
                <tbody id="tbody-<%= invoice_date.id%>">
            <% invoice_date.material_dates.each do |mat_date| %>
                <tr id="shift-date-<%= shift_date.id %>">
                    <td><%= mat_date.material.type %></td>
                    <td><%= mat_date.cost %></td>
                    <td><%= mat_date.quantity %></td>
                    <td><%= number_to_currency(mat_date.instant_total) %></td>
                    <td><%= link_to 'Delete', shift_date_path(mat_date),
                        method: :delete, remote:true,
                        data: { confirm: 'Are you sure?' } %></td>
                </tr>
            <% end %>
        </div>
    </div>
    <%= link_to 'Add Materials', new_invoice_date_materials_date_path(invoice_date), remote:true, class: "btn btn-success" %>
    <%= link_to 'Delete Date', invoice_date_path(invoice_date), method: :delete, remote:true, data: { confirm: 'Are you sure? This cannot be undone.' }, class: "btn btn-danger" %>
    <%# render partial: 'material_dates/material_date', collection: idate.shift_dates, as: :sdate %>
</div>
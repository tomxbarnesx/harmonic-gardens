<%= month_calendar do |date| %>
  <%= date.day %>
<% end %>

<h2>Add Hours</h2>
<%= form_with model: Shift.new, local: true do |form| %>
    <div class="form-group">
        <label>Date: </label>
        <%= form.date_field :date, placeholder: "Date", :id => 'date', class: "form-control form-control-sm"%>
    </div>
    <div class="form-group">
        <label>Start Time: </label>
        <%= form.time_field :start_time, placeholder: "Start Time", :id => 'start_time', class: "form-control form-control-sm"%>
    </div>
    <div class="form-group">
        <label>End Time: </label>
        <%= form.time_field :end_time, placeholder: "End Time", :id => 'end_time', class: "form-control form-control-sm"%>
    </div>
    <div class="form-group">
        <label>Client: </label>
        <%= form.text_field :title, placeholder: "Client name", class: "form-control form-control-sm"%>
    </div>
    <%= form.submit "Submit", :id=>'hours-submit', class: "btn btn-dark" %>
<% end %>
    $("#day-log-container").append("<%= j (render 'day_log_list') %>")
<% else %>
    $("#day-log-container").append("<%= j (render 'day_log_list_none') %>")
<% end %>

<% if @material_dates.length >= 1 %>
    $("#day-log-container").append("<%= j (render 'day_materials_list') %>")
<% else %>
    $("#day-log-container").append("<%= j (render 'day_materials_list_none') %>")
<% end %>

$("#day-log-container").css("display", "flex");


$('#flash').html('<%= j render partial: "layouts/flash_messages" %>');

<%# Set and display the FORM %>

$("#calendar-container").hide();
$("#day-log-container").hide();
$("#add-form").append("<%= j (render 'form') %>");

<%# Set its values. These need to stay here %>

var dateVal = document.getElementById('date-hidden');
date = sessionStorage.getItem("date");
dateVal.value = date;

$("#add-form").show();

$(document).on("touchend click", ".close-x", function(){
    $("#active-shift-add").remove();
    $("#add-form").css("display", "none")
    $("#calendar-container").show();
});